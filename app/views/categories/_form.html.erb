<%= form_with model: @category do |form| %>
  <div class="container d-flex justify-content-center align-items-center" style="min-height: 80vh; padding-top: 0;">
    <div class="col-md-8">
      <div class="card border-0 rounded-4 shadow-sm custom-card">
        <div class="card-body p-5">
          
          <div class="form-group mb-4">
            <%= form.label :name, class: "form-label font-weight-bold" %>
            <%= form.text_field :name, class: "form-control form-control-lg custom-input", placeholder: "Enter category name", value: @category.name, required: true %>
          </div>

          <div class="form-group text-center mb-4">
            <%= form.submit @category.new_record? ? "Create Category" : "Update Category", class: "btn btn-warning btn-lg rounded-pill px-4 mb-3" %>
          </div>

          <div class="text-center">
            <%= link_to 'Back to Categories', categories_path, class: 'btn btn-primary btn-lg rounded-pill px-4 mb-3' %>
          </div>

        </div>
      </div>
    </div>
  </div>
<% end %>
