<%= form_with model: @course do |form| %>
  <div class="container-fluid d-flex justify-content-center align-items-center" style="min-height: 80vh; padding-top: 0;">
    <div class="col-md-8">
      <div class="card border-0 rounded-4 shadow-sm custom-card">
        <div class="card-body p-5">
          <div class="form-group mb-4">
            <%= form.label :title, class: "form-label font-weight-bold" %>
            <%= form.text_field :title, class: "form-control form-control-lg custom-input", placeholder: "Enter course title", required: true %>
          </div>

          <div class="form-group mb-4">
            <%= form.label :description, class: "form-label font-weight-bold" %>
            <%= form.text_area :description, class: "form-control form-control-lg custom-input", placeholder: "Enter a detailed course description", rows: 4, required: true %>
          </div>

          <% if action_name == 'new' %>
            <div class="form-group mb-4">
              <%= form.hidden_field :user_id, value: current_user.id %>
            </div>
          <% end %>

          <div class="form-group mb-4">
            <%= form.label :category_id, "Category", class: "form-label font-weight-bold" %>
            <%= form.collection_select :category_id, Category.all, :id, :name, { include_blank: "Select a category" }, class: "form-control form-control-lg custom-input" %>
          </div>

          <div class="form-group mb-4">
            <%= form.label :picture, "Upload Thumbnail", class: "form-label font-weight-bold" %>
            <%= form.file_field :picture, class: "form-control form-control-lg custom-input" %> <!-- Single image for thumbnail -->
            <small class="form-text text-muted">Upload an image as the course thumbnail.</small>
          </div>

          <div class="form-group text-center mb-4">
            <%= form.submit action_name == 'new' ? "Create Course" : "Update Course", class: "btn btn-warning btn-lg rounded-pill px-4 mb-3" %>
          </div>

          <div class="text-center">
            <%= link_to 'Back to Home', root_path, class: 'btn btn-primary btn-lg rounded-pill px-4 mb-3' %>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>
