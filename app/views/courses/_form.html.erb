<%= form_with model: @course do |form| %>
  <div class="form-group">
    <%= form.label :title %><br>
    <%= form.text_field :title, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :description %><br>
    <%= form.text_area :description, class: "form-control" %><br>
  </div>

  <% if action_name == 'new' %>
    <div class="form-group">
      <%= form.hidden_field :user_id, value: current_user.id %>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :category_id, "Category" %><br>
    <%= form.collection_select :category_id, Category.all, :id, :name, { include_blank: "Select a category" }, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.submit class: "btn btn-primary" %>
  </div>
<% end %>
