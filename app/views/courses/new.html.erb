<h1>Create Course</h1>

<%= form_with model: @course do |form| %>

    <div class="form-group">
      <%= form.label :title %><br>
      <%= form.text_field :title %>
    </div>
  
    <div class="form-group">
      <%= form.label :description %><br>
      <%= form.text_area :description %><br>
    </div>

    <div class="form-group">
      <%= form.hidden_field :user_id, value: current_user.id  %>
    </div>

    <div>
      <%= form.submit %>
    </div>
<% end %>
