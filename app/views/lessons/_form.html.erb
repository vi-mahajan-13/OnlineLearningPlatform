<%= form_with model: @lesson, url: course_lessons_path, local: true do |form| %>
  <div class="container d-flex justify-content-center align-items-center" style="min-height: 80vh; padding-top: 0;">
    <div class="col-md-8">
      <div class="card border-0 rounded-4 shadow-sm custom-card">
        <div class="card-body p-5">
          
          <!-- Title input -->
          <div class="form-group mb-4">
            <%= form.label :title, class: "form-label font-weight-bold" %>
            <%= form.text_field :title, class: "form-control form-control-lg custom-input", placeholder: "Enter lesson title", required: true %>
          </div>

          <!-- Content input -->
          <div class="form-group mb-4">
            <%= form.label :content, class: "form-label font-weight-bold" %>
            <%= form.text_area :content, class: "form-control form-control-lg custom-input", placeholder: "Enter lesson content", rows: 6, required: true %>
          </div>

          <!-- Picture upload input -->
          <div class="form-group mb-4">
            <%= form.label :pictures, "Upload Pictures", class: "form-label font-weight-bold" %>
            <%= form.file_field :pictures, class: "form-control form-control-lg custom-input", multiple: true %>
          </div>

          <!-- Submit button -->
          <div class="form-group text-center mb-4">
            <%= form.submit "Create Lesson", class: "btn btn-warning btn-lg rounded-pill px-4 mb-3" %>
          </div>

          <!-- Link back to the course -->
          <div class="text-center">
            <%= link_to 'Back to Course', course_path(@lesson.course), class: 'btn btn-primary btn-lg rounded-pill px-4 mb-3' %>
          </div>

        </div>
      </div>
    </div>
  </div>
<% end %>
