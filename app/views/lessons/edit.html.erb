<h1>Edit Lesson</h1>
<%= form_with model: @lesson , url: course_lesson_path(@course, @lesson) do |form| %>
    <div class="form-group">
      <%= form.label :title %><br>
      <%= form.text_field :title %>
    </div>
  
    <div class="form-group">
      <%= form.label :content %><br>
      <%= form.text_area :content %><br>
    </div>

    <div>
      <%= form.submit %>
    </div>
<% end %>
  