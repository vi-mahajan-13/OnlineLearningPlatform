<div class="container">
  <div class="row justify-content-center">
    <% @lessons.each do |lesson| %>  
      <div class="col-md-4 mb-4">
        <div class="card shadow-lg border-0 rounded-3 hover-scale">
          <div class="card-body text-center">
            <h5 class="card-title text-dark fw-bold mb-3">
              <%= link_to lesson.title, course_lesson_path(id: lesson.id), class: 'text-decoration-none text-dark' %>
            </h5>
            <% if can? :manage, Lesson %>
              <div class="d-flex justify-content-center">
                <%= link_to 'Edit', edit_course_lesson_path(lesson.course_id, lesson.id), class: 'btn btn-warning btn-sm rounded-pill mx-2' %>
                <%= button_to 'Delete', course_lesson_path(lesson.course_id, lesson.id), method: :delete, class: 'btn btn-danger btn-sm rounded-pill mx-2' %>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    <% end %>
  </div>

  <div class="text-center mt-4">
    <%= link_to 'Back to Course', course_path(@course), class: 'btn btn-primary btn-lg rounded-pill px-4 mb-3' %>
    <%= link_to 'Back to Home', root_path, class: 'btn btn-primary btn-lg rounded-pill px-4 mb-3'%>
  </div>
</div>
